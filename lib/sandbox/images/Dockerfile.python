# Python Specialized Sandbox Image
# Optimized for Python development with scientific computing libraries

FROM python:3.12-slim

# Install system dependencies and development tools
RUN apt-get update && apt-get install -y --no-install-recommends \
    bash \
    curl \
    git \
    gcc \
    g++ \
    make \
    openssh-client \
    build-essential \
    libssl-dev \
    libffi-dev \
    && rm -rf /var/lib/apt/lists/*

# Install Node.js (for mixed Python/JS projects)
RUN curl -fsSL https://deb.nodesource.com/setup_20.x | bash - \
    && apt-get install -y nodejs \
    && rm -rf /var/lib/apt/lists/*

# Install global npm packages
RUN npm install -g pnpm yarn typescript tsx

# Install common Python packages with caching
RUN --mount=type=cache,target=/root/.cache/pip \
    pip install --no-cache-dir \
    pytest \
    pytest-cov \
    black \
    flake8 \
    mypy \
    pylint \
    ipython \
    jupyter \
    numpy \
    pandas \
    matplotlib \
    scikit-learn \
    requests \
    flask \
    fastapi \
    uvicorn

# Configure git
RUN git config --global init.defaultBranch main \
    && git config --global --add safe.directory /workspace/project

# Set working directory
WORKDIR /workspace

# Configure Python environment
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1

# Expose common ports
EXPOSE 3000 5000 8000 8080 5173

# Keep container running
CMD ["tail", "-f", "/dev/null"]
